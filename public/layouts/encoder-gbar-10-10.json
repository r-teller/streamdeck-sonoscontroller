    },
    {
      "key": "value",
      "type": "text",
      "rect": [76, 40, 108, 32],
      "font": { "size": 24, "weight": 600 },
      "alignment": "right"
    },
    {
      "key": "indicator",
      "type": "gbar",
      "rect": [76, 74, 108, 12],
      "value": 0,
      "range": {
        "min": -10,
        "max": 10
      },
      "bar_bg_c": "0:#ff0000,0.5:yellow,1:#00ff00",
      "subtype": 3,
      "border_w": 0,
      "bar_h": 12
